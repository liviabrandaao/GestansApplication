<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    tools:context="br.edu.ifpb.gestansapp.activities.SplashScreenActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Bem vindo(a)!"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textSize="42sp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:id="@+id/btnmedico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="86dp"
        android:backgroundTint="@android:color/transparent"
        app:srcCompat="@mipmap/doctoricon" />

    <ImageButton
        android:id="@+id/btngravida"
        android:layout_width="74dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="83dp"
        android:layout_toStartOf="@+id/btnmedico"
        android:layout_weight="0.04"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_pregnant_woman_black_24dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quem é você? "
        android:layout_centerInParent="true"
        android:fontFamily="cursive"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_marginTop="40dp" />


</RelativeLayout>
