<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.ifpb.gestansapp.activities.LoginMedicoActivity">

    <ImageView
        android:id="@+id/imageAccount"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="43dp"
        app:srcCompat="@drawable/ic_account_circle_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/logintv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:fontFamily="serif"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:layout_below="@+id/imageAccount"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/linearLayout">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutMedLoginChave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtChaveMedicologin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Chave"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutMedLoginCRM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtSenhaMedicologin"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Senha"/>

        </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnEntrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="Entrar"
                tools:layout_editor_absoluteX="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_toEndOf="@+id/btEntrar"
            android:layout_marginTop="150dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não é cadastrado? "
                android:fontFamily="serif"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/btnCadastrarMedico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="Junte-se a nós!"
                tools:layout_editor_absoluteX="8dp" />

        </LinearLayout>


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnMedVoltarMenuInicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:clickable="true"
        app:backgroundTint="@color/colorAccent"
        app:srcCompat="?attr/actionModeCloseDrawable"
        tools:ignore="MissingConstraints"
        app:fabSize="mini"
        android:layout_alignBottom="@+id/imageAccount"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp" />


</RelativeLayout>
