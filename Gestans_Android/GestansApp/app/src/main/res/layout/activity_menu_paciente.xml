<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.ifpb.gestansapp.activities.MenuPacienteActivity">

    <Button
        android:id="@+id/btnSair"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Sair"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="18dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tvBemVinda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Bem vinda!"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textSize="42sp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver autoavaliações"
        android:theme="@style/MyButton"
        android:layout_below="@+id/tvBemVinda"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="137dp"
        android:id="@+id/btnVerAutoAv"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnAddAutoAv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_add_white_24px"
        tools:ignore="MissingConstraints"
        app:fabSize="normal"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />





</RelativeLayout>
