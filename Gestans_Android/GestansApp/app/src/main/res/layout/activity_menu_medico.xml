<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.ifpb.gestansapp.activities.MenuMedicoActivity">

    <ImageButton
        android:id="@+id/imageAccountoptMed"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/ic_account_circle_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/btnSair"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Sair"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="18dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tvBemVindo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Bem vindo(a)!"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textSize="42sp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesquisar pacientes"
            android:theme="@style/MyButton"
            android:layout_below="@+id/tvBemVindo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="137dp"
            android:id="@+id/btnPesquisarPacientes"
            android:textStyle="bold"
            android:textColor="@color/cast_expanded_controller_text_color"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver atualizações recentes"
            android:theme="@style/MyButton"
            android:layout_below="@+id/btnPesquisarPacientes"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:id="@+id/btnVerAtualizaçõesRecentes"
            android:textColor="@color/cast_expanded_controller_text_color"/>





</RelativeLayout>
